<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.DuAnCuoiKi" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.DuAnCuoiKi" parent="Base.Theme.DuAnCuoiKi" />

    <style name="DetailItemLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="DetailLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

</resources>