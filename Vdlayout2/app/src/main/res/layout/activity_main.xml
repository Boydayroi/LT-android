<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO APP"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Button hình vuông -->
    <Button
        android:id="@+id/btnSquare"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="CN1"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6A5ACD"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"/>

    <!-- Button hình tròn -->
    <Button
        android:id="@+id/btnCircle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="CN1"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6A5ACD"
        app:cornerRadius="60dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Button bo tròn -->
    <Button
        android:id="@+id/btnRound1"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="CN1"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6A5ACD"
        app:cornerRadius="28dp"
        app:layout_constraintTop_toBottomOf="@id/btnSquare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnRound2"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/btnRound2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="CN1"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6A5ACD"
        app:cornerRadius="28dp"
        app:layout_constraintTop_toBottomOf="@id/btnCircle"
        app:layout_constraintStart_toEndOf="@id/btnRound1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
